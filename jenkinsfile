pipeline {
    agent any
    environment {
        flutter = "${env.PATH}:C:\\path\\to\\flutter\\bin"
    }
    stages {
        stage('GIT PULL') {
            steps {
                git branch: 'master', url: 'https://github.com/lucas-castro-icts/android_jenkins.git'
            }
        }

        stage('CLEAN') {
            steps {
                sh "${flutter} clean"
            }
        }

        stage('PUB GET') {
            steps {
                sh "${flutter} pub get"
            }
        }
    }
}
