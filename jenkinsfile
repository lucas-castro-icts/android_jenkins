pipeline {
    agent any

    environment {
        FLUTTER_HOME = 'C:\\Users\\TBS\\fvm\\default'
        ANDROID_HOME = 'C:\Users\TBS\AppData\Local\Android\Sdk'  // Ajuste o caminho para o Android SDK
